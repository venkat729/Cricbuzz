#dropdown{
	background:#6db082;
	width:1370px;
}
header{
	position:fixed;
}
#dropdown a{
	text-decoration:none;
	color:#fff;
	font-size:20px;
	padding:10px;
	display:inline-block;
}
ul{
	list-style-type:none;
	display:inline;
	padding:0;
	transition: all 0.5s;
	-moz-transition: all 0.5s;
}
ul li{
	color:#fff;
	display:inline-block;
	font-size:180%;
	margin-left:20%;
	transition: all 0.5s;
	-moz-transition: all 0.5s;
}
ul li ul li{
	display:block;
	background:rgba(0,0,0,0.9);

	transition: all 0.5s;
	-moz-transition: all 0.5s;
}
ul li:hover{
	background:rgba(255,255,255,0.7);

	transition: all 0.5s;
	-moz-transition: all 0.5s;
}
ul li ul{
	position:absolute;
	width:200px;
	display:none;

	transition: all 0.5s;
	-moz-transition: all 0.5s;
}
ul li:hover ul{
	display:block;
	transition: all 0.5s;
	-moz-transition: all 0.5s;
}
ul li ul li a{
	display:block;
	transition: all 0.5s;
	-moz-transition: all 0.5s;
}
ul li ul li:hover{
	background:rgba(2,25,55,0.7);
	transition: all 0.5s;
	-moz-transition: all 0.5s;
}
